<%-include('partials/nav')%>

    <div class="container">
        <br>
        <figure>
                <blockquote cite="https://animemotivation.com/clannad-quotes/">
                <p class="quote">let it all out while you still can – because when you get bigger sometimes you can’t cry even if you have something to cry about.</p>
                </blockquote>
                <figcaption>—Tomoya Okazaki, <cite>Clanned</cite></figcaption>
        </figure>
        <br>
        <img src="https://images7.alphacoders.com/331/331320.jpg" class="img-fluid rounded heroimg" alt="Responsive image">
        
        <h1>comments on Nagisa Furakawa</h1>
        <hr>
            <ul class="list-group">
                <% for(let c of comments){ %>
                    <li class="list-group-item list-group-item-secondary"">
                        <%= c.comment %>-<b><%=c.username%></b>
                        <a name="detail" class="btn btn-outline-success rounded float-right" href="/comments/<%= c.id %>" role="button">Details</a>
                    </li>
                <% } %>
            </ul>
            <a id ="create" name="create"class="btn btn-primary btn-lg btn-block"
             href="/comments/new" role="button">Create New Comment</a>
    </div>
    
